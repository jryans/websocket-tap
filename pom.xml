    <groupId>com.github.jryans.websocket-tap</groupId>
    <artifactId>websocket-tap</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>${project.artifactId}</name>
    <description>Tap into a WebSocket stream to view and modify the messages as they happen</description>
    <url>https://github.com/jryans/websocket-tap</url>
    <inceptionYear>2011</inceptionYear>

    <licenses>
        <license>
