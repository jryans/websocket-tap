            <timezone>-6</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/jryans/websocket-tap.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jryans/websocket-tap.git</developerConnection>
        <url>https://github.com/jryans/websocket-tap</url>
    </scm>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/jryans/websocket-tap/issues</url>
    </issueManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
